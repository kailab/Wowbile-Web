<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="helper.wowbile.mobile" class="Wowbile\Bundle\MobileBundle\Templating\Helper\MobileHelper">
            <tag name="templating.helper" />
            <argument type="collection">
                <argument key="site_name">WÃ¶wbile</argument>
                <argument key="twitter">wowbile</argument>
                <argument key="facebook">Wowbile/134570826606044</argument>
                <argument key="slideshare">mmaspain</argument>
                <argument type="collection" key="main_menu">
                	<argument key="mobile_who">Who we are</argument>
                	<argument key="mobile_concepts">What we do</argument>
                	<argument key="mobile_customers">Customers</argument>
                	<argument key="mobile_contact">Contact</argument>
                </argument>
            </argument>
        </service>
        <service id="twig.extension.helper.mobile" class="Wowbile\Bundle\FrontendBundle\Templating\Twig\Extension\FrontendExtension">
            <tag name="twig.extension" />
            <argument type="service" id="helper.wowbile.mobile" />
        </service>
        <service id="helper.wowbile.locale" class="Wowbile\Bundle\FrontendBundle\Templating\Helper\LocaleHelper" scope="request">
            <tag name="templating.helper" alias="locale" />
            <argument type="collection">
                <argument>es</argument>
                <argument>en</argument>
            </argument>
            <argument type="service" id="session" />
            <argument type="service" id="router" />
            <argument type="service" id="request" />
        </service>
       
        <service id="ltwig.extension.helper.locale" class="Kailab\Bundle\SharedBundle\Templating\Twig\Extension\HelperExtension">
            <tag name="twig.extension"/>
            <argument>helper.wowbile.locale</argument>
            <argument type="service" id="service_container" />
        </service>
        
        <service id="twig.extension.text" class="Twig_Extensions_Extension_Text">
            <tag name="twig.extension"/>
        </service>
    </services>

</container>
