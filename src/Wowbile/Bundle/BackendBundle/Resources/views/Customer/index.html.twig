{% extends "WowbileBackendBundle::index.html.twig" %}

{% block content_title %}
{{ 'Customers' | trans }}
{% endblock %}

{% block content_body %}
{% if entities %}

{% include 'WowbileBackendBundle::_pagination.html.twig' with {'route': 'backend_customer_index', 'pager': pager} %}

<table class="entity_list">
<thead>
<tr>
    <th>{{ 'Name' | trans }}</th>
    <th>{{ 'Updated' | trans }}</th>
    <th>{{ 'Position' | trans }}</th>
    <th>{{ 'Active' | trans }}</th>
    <th>{{ 'Actions' | trans }}</th>
</tr>
</thead>
<tbody>
{% for entity in entities %}
<tr>
    <td>
        {{ entity.name }}
    </td>
    <td>
        {{ entity.updated.format('d/m/Y H:i:s') }}
    </td>
    <td>
        {{ entity.position }}
    </td>
    <td>
        <a href="{{ path('backend_customer_toggle',{'id':entity.id}) }}">
            {{ entity.active ? 'Yes' : 'No' | trans }}
        </a>
    </td>
    <td class="actions">
        <ul>
            <li><a href="{{ path('backend_customer_edit',{'id':entity.id}) }}">{{ 'Edit' | trans }}</a></li>
            <li><a href="{{ path('backend_customer_delete',{'id':entity.id}) }}">{{ 'Delete' | trans }}</a></li>
            <li><a href="{{ path('backend_customer_up',{'id':entity.id}) }}">{{ 'Up' | trans }}</a></li>
            <li><a href="{{ path('backend_customer_down',{'id':entity.id}) }}">{{ 'Down' | trans }}</a></li>
        </ul>
    </td>
</tr>
{% endfor %}
</tbody>
</table>

{% include 'WowbileBackendBundle::_pagination.html.twig' with {'route': 'backend_customer_index', 'pager': pager} %}

{% else %}

<p>{{ 'No customers found.' | trans }}</p>

{% endif %}

<ul id="entity_list_actions">
    <li><a href="{{ path('backend_customer_new') }}">{{ 'Add new Customer' | trans }}</a></li>
</ul>


{% endblock %}
