<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}{{ frontend_helper.configuration.site_name }}{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block javascripts %}
        {% javascripts
            'bundles/wowbilefrontend/js/jquery.js'
            'bundles/wowbilefrontend/js/jquery.ui.js'
            'bundles/stfalcontinymce/vendor/tiny_mce/jquery.tinymce.js'
        %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
        {% endblock %}
        {% block stylesheets %}
        {% stylesheets filter='cssrewrite'
            'bundles/wowbilefrontend/css/layout.css'
            'bundles/wowbilefrontend/css/jqueryui_theme/jquery.ui.css'
            'bundles/wowbilebackend/css/layout.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
        {% endstylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Nunito:300,400,700' rel='stylesheet' type='text/css'>
        {% endblock %}
    </head>
    <body>
        <div id="body_wrapper">
            <div id="header_wrapper">
                <div id="header">
                	<div id="user">
	                    {% trans with {'%username%': app.user.username} %}
	                    Logged in as %username%.
	                    {% endtrans %}
	                    <a href="{{ path('fos_user_security_logout') }}">{{ 'logout' | trans }}</a>
	                </div>
                    <div id="logo">
                         <a href="{{ path('frontend_homepage') }}">
                            <img src="{{ asset('bundles/wowbilefrontend/images/logo.png') }}" alt="Kailab" title="Kailab"/>
                        </a>
                    </div>
                    <ul id="admin_menu">
                    	<li><a href="{{ path('backend_testimony_index') }}">{{ 'testimonies' | trans }}</a></li>
                    	<li><a href="{{ path('backend_link_index') }}">{{ 'links' | trans }}</a></li>
                    	<li><a href="{{ path('backend_wowkipedia_entry_index') }}">{{ 'w√∂wkipedia' | trans }}</a></li>
                    	<li><a href="{{ path('backend_download_index') }}">{{ 'downloads' | trans }}</a></li>
                    	<li><a href="{{ path('backend_screenshot_index') }}">{{ 'screenshots' | trans }}</a></li>
                    	<li><a href="{{ path('backend_customer_index') }}">{{ 'customers' | trans }}</a></li>
                    	<li><a href="{{ path('backend_concept_index') }}">{{ 'concepts' | trans }}</a></li>
                    </ul>
                </div>
            </div>
            <div id="main_wrapper">
                <div id="main">
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
        </div>
        <div id="footer_wrapper">
            <div id="footer">
                {% block footer %}
                <img src="{{ asset('bundles/wowbilefrontend/images/logo_footer.png') }}" alt="{{ frontend_helper.configuration.site_name }}"/>
                {% endblock %}
            </div>
        </div>
        {{ tinymce_init() }}
    </body>
</html>

