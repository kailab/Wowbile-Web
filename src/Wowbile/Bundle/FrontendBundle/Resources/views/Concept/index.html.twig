{% extends "WowbileFrontendBundle::layout.html.twig" %}

{% block title %}
{{ parent() }} - {{ 'What do we do?' | trans }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite'
        'bundles/wowbilefrontend/css/concepts.css'
        'bundles/wowbilefrontend/css/slidemenu.css'
        'bundles/wowbilefrontend/css/fancybox_theme/jquery.fancybox.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
    {% endstylesheets %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'bundles/wowbilefrontend/js/jquery.fancybox.js'
        'bundles/wowbilefrontend/js/jquery.easing.js'
        'bundles/wowbilefrontend/js/jquery.mousewheel.js'
        'bundles/wowbilefrontend/js/jquery.cycle.js'
        'bundles/wowbilefrontend/js/jquery.slidemenu.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}

{% if concepts %}

<div id="concepts_list" class="slidemenu">
<div class="left"></div>
<div class="right"></div>
<div class="scroll">
<div class="gradient_left"></div>
<div class="gradient_right"></div>
<ul class="concepts">
{% for concept in concepts %}
<li {% if loop.first%}class="selected"{% endif %}>
<a href="#{{ concept.slug }}" title="{{ concept.name }}">
	{{ concept.name }}
</a></li>
{% endfor %}
</ul>
</div>
</div>

{% for concept in concepts %}
{% include 'WowbileFrontendBundle:Concept:_show.html.twig'
with {'concept': concept, 'hidden': true} %}

{% endfor %}

<script type="text/javascript">
$(document).ready(function(){
	$('.screenshots.cycle').cycle({
		slideCss: { position: 'absolute', 'right':0, 'top':0 }
	});
	$('#concepts_list').slidemenu({
		sectionSelector: '.concept',
		previousSelector: '.left',
		nextSelector: '.right'
	});
	$('.screenshots li a').fancybox({
	});
});
</script>

{% else %}

<p class="flash_info">{{ 'We currently have no information to show about what we do.' | trans }}</p>

{% endif %}

{% endblock %}