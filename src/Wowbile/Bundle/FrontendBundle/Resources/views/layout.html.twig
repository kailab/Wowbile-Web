<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}{{ frontend_helper.configuration.site_name }}{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block javascripts %}
        {% javascripts
            'bundles/wowbilefrontend/js/jquery.js'
        %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
        {% endblock %}
        {% block stylesheets %}
        {% stylesheets filter='cssrewrite'
            'bundles/wowbilefrontend/css/layout.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
        {% endstylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Nunito:300,400,700' rel='stylesheet' type='text/css'>
        {% endblock %}
    </head>
    <body>
        <div id="body_wrapper">
            <div id="header_wrapper">
                <div id="header">
                    <ul id="languages">
                        {% for code,name in locale_helper.locales %}
                        <li {% if code == locale_helper.code %}class="selected"{% endif %}>
                        <a href="{{ locale_helper.path(code) }}">{{ name | lower }}</a></li>
                        {% endfor %}
                    </ul>
                    <div id="logo">
                         <a href="{{ path('frontend_homepage') }}">
                            <img src="{{ asset('bundles/wowbilefrontend/images/logo.png') }}" alt="Kailab" title="Kailab"/>
                        </a>
                    </div>
                    <ul id="main_menu">
                    	{% for route,text in frontend_helper.mainMenuItems %}
                        <li><a href="{{ path(route) }}" class="
                        {% if route == locale_helper.currentRouteName %}
                        selected
                        {% endif %}
                        {% if loop.first %}
                        first
                        {% elseif loop.last %}
                        last
                        {% endif %}
                        ">{{ text | trans | wowbilify }}</a></li>
    					{% endfor %}
                    </ul>
                </div>
            </div>
            <div id="main_wrapper">
                <div id="main">
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
        </div>
        <div id="footer_wrapper">
            <div id="footer">
                {% block footer %}
                <ul>
                <li><a href="{{ path('mobile_homepage') }}">{{ 'mobile version' | trans }}</a></li>
                </ul>
                                <img src="{{ asset('bundles/wowbilefrontend/images/logo_footer.png') }}" alt="{{ frontend_helper.configuration.site_name }}"/>
                {% endblock %}
            </div>
        </div>
    </body>
</html>

