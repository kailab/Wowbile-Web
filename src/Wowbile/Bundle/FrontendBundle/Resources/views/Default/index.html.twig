{% extends "WowbileFrontendBundle::layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script src="http://widgets.twimg.com/j/2/widget.js" type="text/javascript"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite'
        'bundles/wowbilefrontend/css/homepage.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
    {% endstylesheets %}
{% endblock %}

{% block content %}

<div id="twitter_widget"></div>

{% if testimony %}
<div class="testimony">
<div class="side">
	{% if testimony.image.uri %}
	<img src="{{ testimony.image.uri }}"/>
	{% else %}
	<img src="{{ asset('bundles/wowbilefrontend/images/test_testimony.png') }}"/>
	{% endif %}
</div>
<div class="text">
	<blockquote>{{ testimony.description | raw }}</blockquote>
</div>
<div class="info">{{ testimony.info | raw }}</div>
</div>
{% endif %}

<div id="blocks">
	{% if download and download.file.uri %}
	<div class="block">
	    <div class="title">
	        <h2>{{ 'work!' | trans | wowbilify }}</h2>
	    </div>
	    <div class="body">
	        <p>{{ download.description | raw }}</p>
	        <div class="button download">
		        <a href="{{ path('frontend_download_file', {'id': download.id }) }}">
		            {{ download.name | trans }}
		        </a>
	        </div>
	    </div>
	</div>
	{% endif %}
	
	{% if links %}
	<div class="block links">
	    <div class="title">
	        <h2>{{ 'links!' | trans | wowbilify }}</h2>
	    </div>
	    	{# <p class="explain">Texto de prueba</p> #}
			<ul>
				{% for link in links %}
				<li {% if not link.image.uri %}class="textlink"{% endif %}>{{ link | raw }}</li>
				{% endfor %}
			</ul>
	</div>
	{% endif %}
	
	{% if wowkipedia and locale_helper.code == 'es' %}
	<div class="block wowkipedia">
	    <div class="title">
	        <h2><a href="{{ path('wowkipedia') }}">{{ 'wowkipedia' | trans | wowbilify }}</a></h2>
	    </div>
	    	<p class="explain">
	    		{{ 'Learn new terms related to mobile marketing.' | trans }}
	    		<a href="http://twitter.com/#!/search/realtime/%23wowkipedia">#wowkipedia</a>
	    	</p>
			<dl>
				{% for letter,entries in wowkipedia %}
				<dd>{{ letter | wowbilify }}!</dd>
				<dt>{% for entry in entries %}
				<div class="entry">
					<a href="{{ path('wowkipedia') }}#{{ entry.anchor }}">
						<div class="name">{{ entry.name }}:</div>
						<div class="description">{{ entry.excerpt | raw }}</div>
					</a>
				</div>
				{% endfor %}
				</dt>
				{% endfor %}
			</dl>
	</div>
	{% else %}
	<div class="block">
	    <div class="title">
	        <h2><a href="{{ path('frontend_contact') }}">{{ 'contact' | trans | wowbilify }}</a></h2>
	    </div>
	    <dl class="contact">
	    	<dt><img src="{{ asset('bundles/wowbilefrontend/images/contact_ico_email.png') }}" alt="{{ 'Email' | trans }}"/></dt>
	    	<dd>{{ frontend_helper.configuration.contact_email | mailto | raw }}</dd>
	    	<dt><img src="{{ asset('bundles/wowbilefrontend/images/contact_ico_phone.png') }}" alt="{{ 'Telephone' | trans }}"/></dt>
	    	<dd>{{ frontend_helper.configuration.contact_phone | mailto | raw }}</dd>
    	</dl>
	</div>
	{% endif %}
</div>

{% include 'WowbileFrontendBundle:Default:_followus.html.twig' %}

{#
<a href="http://www.mmaspain.com/">
    <img src="{{ asset('bundles/wowbilefrontend/images/logo_mma.png') }}"/>
</a>
#}

<script type="text/javascript">
$(document).ready(function(){
	var h = $('#main').innerHeight()-130;
	var user = {{ frontend_helper.configuration.twitter | json_encode | raw }};
    new TWTR.Widget({
      id: 'twitter_widget',
      version: 2,
      type: 'profile',
      rpp: 30,
      interval: 6000,
      width: 200,
      height: h,
      theme: {
        shell: {
          background: '#33A3C9',
          color: '#ffffff'
        },
        tweets: {
          background: '#ffffff',
          color: '#000000',
          links: '#33A3C9'
        }
      },
      features: {
        scrollbar: true,
        loop: false,
        live: true,
        hashtags: true,
        timestamp: true,
        avatars: false,
        behavior: 'all'
      }
    }).render().setUser(user).start();
});
</script>


{% endblock %}
